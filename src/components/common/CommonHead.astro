<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<!-- Preconnect to external domains for performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Google Fonts -->
<link
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet"
/>
<link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">


<!-- Theme -->
<link rel="stylesheet" as="style" id="currentTheme" href="/themes/amoled.css" />

<script>
    import { $config, defaultConfig } from "@/store/config";
    import { THEME } from "@/constants/themes";

    $config.subscribe((config) => {
        if(!Object.keys(THEME).includes(config.theme)) {
            $config.set({...defaultConfig})
        }
        document.querySelector("#currentTheme")?.setAttribute("href", THEME[config.theme].path ?? THEME["amoled"].path);
    });
    
</script>