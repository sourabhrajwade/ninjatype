---
import WPSLineChart from "../charts/WPSLineChart";
import ResetButton from "../keyboard/ResetButton";
import Stats from "./Stats";
---

<div id="analytics-container">
    <div id="wps-line-chart-container">
        <div class="chart-header">
            <h2 class="chart-title">Performance</h2>
        </div>
        <div id="wps-line-chart">
            <WPSLineChart client:only />
        </div>
    </div>
    <Stats client:load />
</div>

<style>

    body[data-kb-typing-state="2"] #analytics-container {
        display: flex;
        margin-top: 0px;
    }
    #analytics-container {
        display: none;
        flex-direction: column;
        gap: 2.5rem;
        max-width: 100%;
    }
    #wps-line-chart-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    #wps-line-chart {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .chart-header {
        margin-bottom: 1rem;
    }

    .chart-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-color);
        margin: 0;
        letter-spacing: -0.02em;
    }

    :global(#stats-toolbar) {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3rem;
        flex-wrap: wrap;
    }

    :global(.stat-item) {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    :global(.stat-value) {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--text-color);
        font-variant-numeric: tabular-nums;
        line-height: 1;
        letter-spacing: -0.02em;
    }

    :global(.stat-label) {
        font-size: 0.875rem;
        color: var(--sub-text-color);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    :global(.stat-divider) {
        display: none;
    }

    /* Highlight primary metrics */
    :global(.stat-item:has(.stat-label:is(:contains("wpm"), :contains("WPM"), :contains("rWPM")))) :global(.stat-value) {
        font-size: 3rem;
        color: var(--main-color);
        font-weight: 700;
    }

    :global(.stat-item:has(.stat-label:contains("Accuracy"))) :global(.stat-value) {
        color: var(--main-color);
    }

    /* Tablet and below */
    @media (max-width: 1024px) {
        :global(#stats-toolbar) {
            gap: 2.5rem;
        }

        :global(.stat-value) {
            font-size: 2.25rem;
        }

        :global(.stat-item:has(.stat-label:is(:contains("wpm"), :contains("WPM"), :contains("rWPM")))) :global(.stat-value) {
            font-size: 2.75rem;
        }
    }

    /* Mobile landscape and smaller tablets */
    @media (max-width: 768px) {
        #analytics-container {
            gap: 2rem;
        }

        .chart-title {
            font-size: 1.25rem;
        }

        :global(#stats-toolbar) {
            gap: 2rem;
            row-gap: 1.5rem;
        }

        :global(.stat-value) {
            font-size: 2rem;
        }

        :global(.stat-item:has(.stat-label:is(:contains("wpm"), :contains("WPM"), :contains("rWPM")))) :global(.stat-value) {
            font-size: 2.5rem;
        }

        :global(.stat-label) {
            font-size: 0.8rem;
        }
    }

    /* Mobile portrait */
    @media (max-width: 640px) {
        #analytics-container {
            gap: 1.5rem;
        }

        .chart-title {
            font-size: 1.125rem;
        }

        :global(#stats-toolbar) {
            gap: 1.5rem;
            row-gap: 1.25rem;
        }

        :global(.stat-item) {
            gap: 0.375rem;
        }

        :global(.stat-value) {
            font-size: 1.75rem;
        }

        :global(.stat-item:has(.stat-label:is(:contains("wpm"), :contains("WPM"), :contains("rWPM")))) :global(.stat-value) {
            font-size: 2.25rem;
        }

        :global(.stat-label) {
            font-size: 0.75rem;
            letter-spacing: 0.08em;
        }
    }

    /* Small mobile */
    @media (max-width: 480px) {
        #analytics-container {
            gap: 1.25rem;
        }

        .chart-title {
            font-size: 1rem;
        }

        :global(#stats-toolbar) {
            gap: 1.25rem;
            row-gap: 1rem;
        }

        :global(.stat-item) {
            gap: 0.25rem;
            min-width: 70px;
        }

        :global(.stat-value) {
            font-size: 1.5rem;
        }

        :global(.stat-item:has(.stat-label:is(:contains("wpm"), :contains("WPM"), :contains("rWPM")))) :global(.stat-value) {
            font-size: 2rem;
        }

        :global(.stat-label) {
            font-size: 0.7rem;
            letter-spacing: 0.05em;
        }
    }

    /* Extra small devices */
    @media (max-width: 360px) {
        :global(#stats-toolbar) {
            gap: 1rem;
            row-gap: 0.875rem;
        }

        :global(.stat-item) {
            min-width: 60px;
        }

        :global(.stat-value) {
            font-size: 1.25rem;
        }

        :global(.stat-item:has(.stat-label:is(:contains("wpm"), :contains("WPM"), :contains("rWPM")))) :global(.stat-value) {
            font-size: 1.75rem;
        }

        :global(.stat-label) {
            font-size: 0.65rem;
        }
    }
</style>