<script>
    import { $config } from "@/store/config";
    import { THEME } from "@/constants/themes";

    $config.subscribe((config) => {
        document.querySelector("#currentTheme")?.setAttribute("href", THEME[config.theme].path ?? THEME["default"].path);
    });
</script>